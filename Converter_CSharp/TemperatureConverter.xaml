<Window x:Class="Converter_CSharp.TemperatureConverter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Converter_CSharp"
        mc:Ignorable="d"
        Title="TemperatureConverter" Height="450" Width="400">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.057"/>
                <GradientStop Color="#FF06CDD6" Offset="0.187"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Celsius and Fahrenheit &#xD;&#xA;Temperature Converter" HorizontalAlignment="Center" VerticalAlignment="Top" Height="100" Width="400" Foreground="#FF00F3FF" FontSize="24" HorizontalContentAlignment="Center" BorderBrush="White"/>
    </Grid>
</Window>
